<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- pagina inicial de la App *conseguimos que la pagina principal no sea 
		la index.jsp <welcome-file-list> <welcome-file>/inicio</welcome-file> </welcome-file-list> -->


	<!-- versiones < 3.0 los Servlets de declaran aqui Versiones > 3.0 se usan 
		anotaciones en el propio servlet @WebServlet("/mapping") Ejemplo: HomeController 
		en version 2.5 <servlet> <servlet-name>home</servlet-name> <servlet-class>com.ipartek.formacion.youtube.controller.HomeController</servlet-class> 
		</servlet> <servlet-mapping> <servlet-name>home</servlet-name> <url-pattern>/inicio</url-pattern> 
		</servlet-mapping> -->

	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
	<error-page>
		<error-code>404</error-code>
		<location>/view/error-pages/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/view/error-pages/500.jsp</location>
	</error-page>

	<!-- Tambien se pueden especificar Excepciones <error-page> <exception-type>java.lang.NullPointerException</exception-type> 
		<location>/exception.jsp</location> </error-page> -->


</web-app>